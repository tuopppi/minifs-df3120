#!/bin/hush
start() {
	    echo "* Starting dbus"
        mkdir -p /usr/var/run/dbus
        /bin/rm -f /usr/var/run/dbus/pid
        dbus-daemon --system
}
stop() {
	    echo "* Stopping dbus"
        /bin/rm -f /usr/var/run/dbus/pid
        killall dbus-daemon
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        stop
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac
exit 0
